package while_;

import java.util.Scanner;

public class NumberGame {

	public static void main(String[] args) {
		int com, user;
		int count = 0;
		int con;
		com = (int) (Math.random() * 100 + 1);		//com = (int) (Math.random() *  + 65); 
		Scanner scanner = new Scanner(System.in);
		System.out.println("1 ~ 100 사이의 숫자를 맞춰보세요");
		
		while(true) {
			System.out.print("숫자 입력 :  ");
			user = scanner.nextInt();
			count = count + 1;
			
			if(user == com) {
				System.out.println("딩동댕 " + count + "번만에 맞췄습니다.");
				System.out.println("한번 더 하시겠습니까? 1) yes 2) no");
				con = scanner.nextInt();
				if(con == 1) {
					continue;
				}
				else if(con == 2) {
					break;
				}
			}if(user > com) {
				System.out.println(user + "보다 작습니다!!");
			}if(user < com) {
				System.out.println(user + "보다 큽니다!!");
			}
		}

	}

}
