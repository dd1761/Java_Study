package array;

public class Array02 {

	public static void main(String[] args) {
		String[] ar = {"호랑이", "사자", "코끼리", "기린", "하이애나", "긴팔원숭이", "뱀"};
		
		for(int i = 0; i < ar.length; i++) {	
			System.out.println("ar[" + i + "] = " + ar[i]);
			System.out.println("문자열의 크기 = " + ar[i].length());
			System.out.println();
		}	//for

	}

}












